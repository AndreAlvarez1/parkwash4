<%= render "layouts/navbar" %>
<%= render "layouts/sidebar3" %>

<div id="main-content">

  <div class="container">

    <div id="content-title" class="container row">
          <h1>Plan Contratados</h1>
    </div>

    <% if @user.plans.first == nil %>

      <h4>No tienes planes contratados actualmente</h4>
      <br>
      <%= link_to 'Contrata un Plan', new_user_plan_path(@user), class: "btn btn-primary" %>



    <% else %>

      <p id="notice"><%= notice %></p>

      <h1>Plans</h1>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Patente</th>
            <th>Tipo de Lavado</th>
            <th>Frecuencia</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.id %></td>
              <td><%= plan.user.full_name %></td>
              <td><%= plan.vehicles %></td>
              <td><%= plan.wash_type %></td>
              <td><%= plan.frequency %></td>
              <td><%= link_to 'Show', user_plans_path(@user) %></td>
              <td><%= link_to 'Destroy', user_plan_path(@user, plan), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    <% end %>


</div>
</div>
