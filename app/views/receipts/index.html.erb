<p id="notice"><%= notice %></p>

<h1>Receipts de <%= @user.first_name + " " + @user.last_name %></h1>

<table class="table table-striped table-responsive-xl">
  <thead>
    <tr>
      <th>Creation date</th>
      <th>Informed gross amount</th>
      <th>Total discount amount</th>
      <th>Sii status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.creation_date %></td>
        <td><%= receipt.informed_gross_amount %></td>
        <td><%= receipt.total_discount_amount %></td>
        <td><%= receipt.sii_status %></td>
        <td><%= link_to 'Show', user_receipt_path(@user, receipt) %></td>
        <td><%= link_to 'Edit', edit_user_receipt_path(@user, receipt) %></td>
        <td><%= link_to 'Destroy', user_receipt_path(@user, receipt), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_user_receipt_path %>
