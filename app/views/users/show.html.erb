<%= render "layouts/navbar" %>


<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2><%= @user.full_name %></h2>
                    <p><strong>Email: </strong> <%= @user.email %> </p>
                    <p><strong>RUT: </strong> <%= @user.rut %> </p>
                    <p><strong>Ciudad:: </strong> <%= @user.city %> </p>
                    <p><strong>Características: </strong>
                        <span class="tags">html5</span>
                        <span class="tags">css3</span>
                        <span class="tags">jquery</span>
                    </p>
                </div>
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
												<% if @user.gender == "male" %>
                        	<img src="https://randomuser.me/api/portraits/men/<%=@user.id%>.jpg " alt="" class="img-circle img-responsive">
												<% else %>
													<img src="https://randomuser.me/api/portraits/women/<%=@user.id%>.jpg " alt="" class="img-circle img-responsive">
												<% end  %>
                        <figcaption class="ratings">
                            <p>Ratings
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                 <span class="fa fa-star-o"></span>
                            </a>
                            </p>
                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="col-xs-12 divider text-center">
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong> 121 </strong></h2>
                    <p><small>Lavados</small></p>
                    <button class="btn btn-success btn-block" onclick="location.href='<%= user_washes_path(@user) %>'"><span class="fa fa-plus-circle"></span>Ver Lavados</button>
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                  <h2><strong> <%= @user.vehicles.count %> </strong></h2>
                    <p><small>Vehículos</small></p>
                    <button class="btn btn-info btn-block" onclick="location.href='<%= user_vehicles_path(@user) %>'"><span class="fa fa-user"></span> Ver Vehículos </button>
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong>10</strong></h2>
                    <p><small>Pagos</small></p>
                    <button class="btn btn-danger btn-block" onclick="location.href='<%= user_receipts_path(@user) %>'"><span class="fa fa-gear"></span> Ver Boletas </button>
                </div>
            </div>
    	 </div>
		</div>
	</div>
</div>
