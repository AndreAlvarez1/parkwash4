<%= render "layouts/navbar" %>
<%= render "layouts/sidebar3" %>

<div id="main-content">


  <div id="payments-table-div" class="container">


    <h1>Mis Pagos y Boletas</h1>

    <table id="payments-table-tb" class="table table-striped table-hover table-responsive-sm">
      <thead>
        <tr>
          <th># Pago</th>
          <th>Fecha de Cargo</th>
          <th>MÃ©todo de Pago</th>
          <th>Monto Pagado</th>
          <th>Ver Boleta</th>
        </tr>
      </thead>

      <tbody>
        <% @payments.each do |payment| %>
          <% if payment.user_id == current_user.id %>
            <tr>
              <td><%= payment.id %></td>
              <td><%= payment.charged_date %></td>
              <td><%= payment.method %></td>
              <td><%= number_to_currency(payment.paid_amount, precision: 0, seperator: ",", delimiter: ".")%></td>
              <td><%= link_to 'Ver', asset_path("/payment_receipts/boleta_ejemplo.pdf"), target: "_blank" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>

<script>

  $(document).ready(function(){
    $('#payments-table-tb').DataTable();
  });

</script>
