<%= render "layouts/navbar" %>


<div class="row justify-content-center">

  <div class="col-8">

    <%= form_with(model: @vehicle, url: [current_user, @vehicle], local: true, id: "NewVehicleForm", html: {class: 'form'}) do |f| %>
      <% if @vehicle.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

          <ul>
          <% @vehicle.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <h2>Inicio de Sesión</h2>

    <div class="row">

      <div class="col-md-4">

        <div class="form-group">
          <%= f.label :patent %>
          <%= f.text_field :patent,
          autofocus: true,
          class: 'form-control',
          placeholder: 'ABCD-78'
          %>
        </div>

        <div class="form-group">
          <%= f.label :vehicle_type %><br />
          <%= f.text_field :vehicle_type,
          class: 'form-control' %>
        </div>

      </div>

      <div class="col-md-4">

        <div class="form-group">
          <%= f.label :brand %>
          <%= f.text_field :brand,
          class: 'form-control'
          %>
        </div>

        <div class="form-group">
          <%= f.label :model %><br />
          <%= f.text_field :model,
          class: 'form-control' %>
        </div>

      </div>

      <div class="col-md-4">

        <div class="form-group">
          <%= f.label :color %>
          <%= f.text_field :color,
          class: 'form-control'
          %>
        </div>

        <div class="form-group">
          <%= f.label :vehicle_size_id %><br />
          <%= f.text_field :vehicle_size_id,
          class: 'form-control' %>
        </div>

      </div>

    </div>

      <div class="actions">
        <%= f.submit "Crear Vehículo", class: 'btn btn-success'  %>
        <%= link_to 'Volver', user_vehicles_path, class: 'btn btn-danger' %>
      </div>

      <% end %>

  </div>
</div>


</div>
