<%= render "layouts/navbar" %>
<%= render "layouts/sidebar3" %>


<div class="row">

  <div class="col-md-8">

    <%= form_with(model: @vehicle, url: [current_user, @vehicle], local: true, id: "NewVehicleForm", html: {class: 'form'}) do |f| %>
      <% if @vehicle.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

          <ul>
          <% @vehicle.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <h2>Agregar un Vehículo</h2>

    <div class="row">

      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :patent %>
          <%= f.text_field :patent,
          autofocus: true,
          class: 'form-control',
          placeholder: 'ABCD-78'
          %>
        </div>
      </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :brand %>
            <%= f.text_field :brand,
            class: 'form-control'
            %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :model %><br />
            <%= f.text_field :model,
            class: 'form-control' %>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :color %>
            <%= f.text_field :color,
            class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label "Tipo Vehículo" %><br />
            <%= f.text_field :vehicle_type,
            class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label "Recinto de Lavado" %><br />
            <%= f.select :name, Place.names.keys.to_a,
            class: 'form-control' %>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col-md-2">
          <div class="actions">
            <%= f.submit "Crear Vehículo", class: 'btn btn-success'  %>
            <%= link_to 'Volver', user_vehicles_path, class: 'btn btn-danger' %>
          </div>
        </div>

      </div>

    </div>

      <% end %>

  </div>
