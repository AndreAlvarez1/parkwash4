<h2>Ingresar un Nuevo Veh√≠culo</h2>
<%= render 'form', vehicle: @vehicle %>

<script>

  $("[name=commit]").click(function(e){
    e.preventDefault();
    var form = $("#NewVehicleForm")
    $.ajax({
      url: form.action,
      type: 'POST',
      dataType: 'json',
      data: form.serialize()
    })
    .done(function(data) {
      $("#NewVehicleForm").append(data)
    })
    .fail(function() {
      console.log("error");
    })
    .always(function() {
      console.log("complete");
    });
  }

  })


</script>
