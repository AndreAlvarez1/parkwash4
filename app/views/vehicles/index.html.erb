<p id="notice"><%= notice %></p>

<h1>Vehicles from <%= current_user.first_name + " " + current_user.last_name %></h1>

<table class="table table-striped table-responsive-xl">
  <thead>
    <tr>
      <th>Patent</th>
      <th>Type</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Color</th>
      <th>Status</th>
      <th>Vehicle size</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.patent %></td>
        <td><%= vehicle.vehicle_type %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.status %></td>
        <td><%= vehicle.vehicle_size.name %></td>
        <td><%= link_to 'Show', user_vehicle_path(@user, vehicle) %></td>
        <td><%= link_to 'Edit', edit_user_vehicle_path(@user, vehicle) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_user_vehicle_path(@user) %>
