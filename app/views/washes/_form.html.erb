<div class="row justify-content-center">

  <div class="col-8">

    <%= form_with(model: @wash, url: [current_user, @wash], id: "NewWashForm", html: {class: 'form'}) do |form| %>
      <% if wash.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(wash.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

          <ul>
          <% wash.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <h2>Agregar un Lavado</h2>

    <div class="row">

      <div class="col-md-4">

        <div class="form-group">
          <%= form.label :creation_date %>
          <%= form.date_select :creation_date,
          autofocus: true,
          class: 'form-control'
          %>
        </div>

        <div class="form-group">
          <%= form.label :discount_amount %>
          <%= form.number_field :discount_amount,
          class: 'form-control' %>
        </div>

      </div>

      <div class="col-md-4">

        <div class="form-group">
          <%= form.label :wash_type_id %>
          <%= form.text_field :wash_type_id,
          class: 'form-control'
          %>
        </div>

        <div class="form-group">
          <%= form.label :washer_id %>
          <%= form.text_field :washer_id,
          class: 'form-control' %>
        </div>

      </div>

      <div class="col-md-4">

        <div class="form-group">
          <%= form.label :vehicle_id %>
          <%= form.text_field :vehicle_id,
          class: 'form-control'
          %>
        </div>

        <div class="form-group">
          <%= form.label :receipt_id %>
          <%= form.text_field :receipt_id,
          class: 'form-control' %>
        </div>

      </div>

    </div>

      <div class="actions">
        <%= form.submit "Crear Lavado", class: 'btn btn-success'  %>
      </div>

      <% end %>

  </div>
</div>


</div>
