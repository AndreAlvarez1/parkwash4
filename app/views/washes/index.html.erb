<h1>Washes</h1>

<table class="table table-striped table-responsive-xl">
  <thead>
    <tr>
      <th>ID</th>
      <th>Creation date</th>
      <th>Discount amount</th>
      <th>Wash type</th>
      <th>Washer Name</th>
      <th>Vehicle Patent</th>
      <th>Receipt Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.washes.each do |wash| %>
      <tr>
        <td><%= wash.id %></td>
        <td><%= wash.creation_date %></td>
        <td><%= wash.wash_type.name %></td>
        <td><%= wash.washer.first_name %></td>
        <td><%= wash.vehicle.patent %></td>
        <td><%= wash.receipt.id %></td>
        <td><%= link_to 'Ver', user_wash_path({user_id: @user.id}, wash) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver a Mi Perfil', user_path(@user), class: "btn btn-primary" %>

