
<%= render "layouts/navbar" %>
<%= render "layouts/sidebar3" %>

<div id="main-content">


  <div id="washes-table-div" class="container">

    <h1>Lavados Realizados</h1>

    <table id="washes-table-tb" class="table table-striped table-hover table-responsive-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Fecha de Lavado</th>
          <th>Tipo de Lavado</th>
          <th>Nombre Lavador</th>
          <th>Patente Veh√≠culo</th>
          <th>Precio Lavado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.washes.each do |wash| %>
          <% if @show_by_patent %>
            <% if @vehicle_patent == wash.vehicle.patent %>
              <tr>
                <td><%= wash.id %></td>
                <td><%= wash.creation_date %></td>
                <td><%= wash.wash_type.name %></td>
                <td><%= wash.washer.full_name %> </td>
                <td><%= wash.vehicle.patent %></td>
                <td><%= number_to_currency(wash.wash_price, precision: 0, seperator: ",", delimiter: ".")%></td>

              </tr>
            <% end %>
          <% else %>
            <tr>
              <td><%= wash.id %></td>
              <td><%= wash.creation_date %></td>
              <td><%= wash.wash_type.name %></td>
              <td><%= wash.washer.full_name %></td>
              <td><%= wash.vehicle.patent %></td>
              <td><%= number_to_currency(wash.wash_price, precision: 0, seperator: ",", delimiter: ".")%></td>
            </tr>
          <% end  %>
        <% end %>
      </tbody>
    </table>

    <br>
    <br>


  </div>
</div>

<script>

  $(document).ready(function(){
    $('#washes-table-tb').DataTable();
  });

</script>
