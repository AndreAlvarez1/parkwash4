<p id="notice"><%= notice %></p>


<h2>Search by Name</h2>
<div class="row">
  <div class="col-md-4">

    <form class="" action="<%= washes_index_all_path %>" method="get">
      <input name="search_q">
    </form>
  </div>
</div>

<h1>Washes</h1>

<table id="washes_all" class="table table-striped table-responsive-xl">
  <thead>
    <tr>
      <th>Wash id</th>
      <th>Creation date</th>
      <th>Discount amount</th>
      <th>Wash type</th>
      <th>Washer Name</th>
      <th>Vehicle Patent</th>
      <th>User Full Name</th>
      <th>Wash Receipt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @washes %>
  </tbody>
</table>

<br>

<%= link_to 'NO APRETAR', new_user_wash_path({user_id: 1}), class: "btn btn-primary" %>

<%= render 'form', wash: @wash %>

<script type="text/javascript">

  $('[name=search_q]').keyup(function () {
    if($(this).val().length > 0) {
      $.ajax({
        url: "<%= washes_index_all_path %>",
        type: 'GET',
        dataType: 'script',
        data: {search_q: $(this).val()}
      })
    }

    if(!this.value) {
      $.ajax({
        url: "<%= washes_index_all_path %>",
        type: 'GET',
        dataType: 'script',
      })
    }

  })

</script>
